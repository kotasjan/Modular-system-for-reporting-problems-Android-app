<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       xmlns:tools="http://schemas.android.com/tools"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:paddingTop="@dimen/activity_vertical_margin"
                                       android:paddingBottom="@dimen/activity_vertical_margin"
                                       app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                       tools:context=".ReportActivity"
                                       tools:showIn="@layout/activity_report">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical">

        <TextView
                android:id="@+id/report_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:textSize="24sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorCardTextHeader"
                android:fontFamily="@font/roboto"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginStart="@dimen/activity_horizontal_margin"
                      android:layout_marginEnd="@dimen/activity_horizontal_margin">
            <TextView
                    android:id="@+id/report_city"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/report_dot_divider"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/dot_divider"/>
            <TextView
                    android:id="@+id/report_date"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView
                android:id="@+id/report_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.5"
                android:fontFamily="@font/roboto"/>

        <TextView
                android:id="@+id/report_reason_for_refusal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:textColor="@color/colorPrimaryText"
                android:textSize="16sp"
                android:text="@string/reason_for_refusal"
                android:visibility="gone"
                android:fontFamily="@font/roboto"/>

        <TextView
                android:id="@+id/report_employee_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.5"
                android:visibility="gone"
                android:fontFamily="@font/roboto"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

        <TextView
                android:id="@+id/report_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:textSize="22sp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/roboto"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>