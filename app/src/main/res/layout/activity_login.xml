<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="cz.jankotas.bakalarka.LoginActivity" android:id="@+id/constraitLayout"
>

    <!-- Login progress -->
    <ProgressBar
            android:id="@+id/login_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_login_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:fontFamily="@font/roboto"
            android:singleLine="true" android:hint="@string/email" android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_login_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/email_login_input"
            android:fontFamily="@font/roboto"
            android:singleLine="true" android:hint="@string/password" android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
    <TextView
            android:text="@string/forgotten_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgotten_password" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/password_login_input" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:fontFamily="@font/roboto" android:textColor="@color/colorPrimary"/>
    <Button
            android:text="@string/action_sign_in"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_login" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/forgotten_password" android:layout_marginTop="20dp"
            android:textColor="@color/colorText" android:background="@drawable/btn_wide_primary"/>
    <TextView
            android:text="@string/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button_login" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="@string/facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" android:id="@+id/button_facebook" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/button_google" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:background="@drawable/btn_wide_facebook"
            android:textColor="@color/colorText"/>
    <Button
            android:text="@string/google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" android:id="@+id/button_google"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" android:background="@drawable/btn_wide_google"
            android:textColor="@color/colorText"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/button_facebook">
        <TextView
                android:text="@string/not_having_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="466dp"
                tools:layout_editor_absoluteX="88dp"
                android:layout_weight="1" android:gravity="right" android:id="@+id/no_account_text"
                android:layout_marginEnd="5dp"/>
        <TextView
                android:text="@string/create_new_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" tools:layout_editor_absoluteY="447dp"
                tools:layout_editor_absoluteX="210dp"
                android:layout_weight="1" android:id="@+id/create_new_account_text" android:layout_marginStart="5dp"
                android:textColor="@color/colorPrimary"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>