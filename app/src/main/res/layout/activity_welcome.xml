<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cz.jankotas.bakalarka.WelcomeActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_header"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryText"
            android:id="@+id/welcome_header"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/welcome_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14sp"
            android:textColor="@color/colorSecondaryText"
            android:text="@string/welcome_text"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin_half"
            app:layout_constraintTop_toBottomOf="@+id/welcome_header"/>
    <Button
            android:text="@string/sign_up_welcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_register_welcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/btn_wide_secondary"
            android:textColor="@color/colorPrimary"
            android:elevation="10dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>
    <Button
            android:text="@string/sign_in_welcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_login_welcome"
            app:layout_constraintBottom_toTopOf="@+id/button_register_welcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/roboto_medium"
            android:background="@drawable/btn_wide_primary"
            android:textColor="@color/colorText"
            android:elevation="10dp"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"/>

</androidx.constraintlayout.widget.ConstraintLayout>