<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="cz.jankotas.bakalarka.WelcomeActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_header"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/roboto" android:textSize="16sp"
            android:textColor="@color/colorPrimaryText" android:id="@+id/welcome_header"
            app:layout_constraintBottom_toTopOf="@+id/welcome_text" android:layout_marginBottom="20dp"
            android:layout_marginStart="20dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/welcome_text" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/roboto" android:text="@string/welcome_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_login" android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"/>
    <Button
            android:text="@string/sign_up_welcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_register" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:fontFamily="@font/roboto_medium"
            android:background="@color/colorText" android:textColor="@color/colorPrimary" android:elevation="10dp"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:layout_marginBottom="20dp"/>
    <Button
            android:text="@string/sign_in_welcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_login" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/button_register" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/roboto_medium"
            app:layout_constraintHorizontal_bias="0.0"
            android:background="@color/colorPrimary" android:textColor="@color/colorText"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"/>

</android.support.constraint.ConstraintLayout>