<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       xmlns:tools="http://schemas.android.com/tools"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:paddingTop="@dimen/activity_vertical_margin_half"
                                       android:paddingBottom="@dimen/activity_vertical_margin"
                                       app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                       tools:context=".NewReportDetailActivity"
                                       tools:showIn="@layout/activity_new_report_detail"
                                       android:layout_above="@+id/bottom_banner">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:orientation="vertical">

        <TextView
                android:id="@+id/report_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:textSize="24sp"
                android:textColor="@color/colorCardTextHeader"
                android:fontFamily="@font/roboto"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginStart="@dimen/activity_horizontal_margin"
                      android:layout_marginEnd="@dimen/activity_horizontal_margin">
            <TextView
                    android:id="@+id/report_city"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <TextView
                    android:id="@+id/report_dot_divider"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/dot_divider"/>
            <TextView
                    android:id="@+id/report_date"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <TextView
                android:id="@+id/report_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:textSize="14sp"
                android:lineSpacingMultiplier="1.5"
                android:fontFamily="@font/roboto"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:paddingTop="@dimen/activity_vertical_margin_half"
                      android:paddingBottom="@dimen/activity_vertical_margin_half"
                      android:paddingStart="@dimen/activity_horizontal_margin"
                      android:paddingEnd="@dimen/activity_horizontal_margin">


            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/report_profile_image"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="@string/users_icon"/>

            <TextView
                    android:id="@+id/report_user"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryText"
                    android:fontFamily="@font/roboto"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

        <TextView
                android:id="@+id/report_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin_half"
                android:layout_marginBottom="@dimen/activity_vertical_margin_half"
                android:textSize="22sp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/roboto"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>